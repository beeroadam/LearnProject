{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "schedule": [
        "every weekend"
    ],
    "automerge": false,
    "separateMinorPatch": true,
    "packageRules": [
        {
            "updateTypes": [
                "minor"
            ],
            "groupName": "all minor updates"
        },
        {
            "updateTypes": [
                "major"
            ],
            "separateMultipleMajor": true
        }
    ]
}
