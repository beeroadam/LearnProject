{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "schedule": [
        "every weekend"
    ],
    "automerge": false,
    "separateMinorPatch": true,
    "packageRules": [
        {
            "updateTypes": [
                "major"
            ],
            "groupName": "all major updates",
            "groupSlug": "major-updates"
        },
        {
            "updateTypes": [
                "minor"
            ],
            "groupName": "all minor updates",
            "groupSlug": "minor-updates"
        },
        {
            "updateTypes": [
                "patch"
            ],
            "groupName": "all patch updates",
            "groupSlug": "patch-updates"
        }
    ]
}
